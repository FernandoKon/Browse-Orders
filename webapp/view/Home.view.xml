<mvc:View controllerName="com.lab2dev.browseorders.controller.Home"
    xmlns:mvc="sap.ui.core.mvc" displayBlock="true"
    xmlns="sap.m" xmlns:f="sap.f"
    height="100%">

    <f:DynamicPage id="HomePage">
        
        <f:title>
			<f:DynamicPageTitle>
				<f:heading>
					<Title text="Orders"/>
				</f:heading>
			</f:DynamicPageTitle>
		</f:title>

        <f:content>
            <List
                id="idList"
                items="{orders>/}">
                <headerToolbar>
                    <OverflowToolbar>
                        <ToolbarSpacer/>
                        <SearchField liveChange="onSearch" width="17.5rem"/>
                    </OverflowToolbar>
                </headerToolbar>
                <ObjectListItem 
                    title=" Order {orders>OrderID}"
                    type="Active"
                    press="onNavTo"
                    number="{
                        path: 'orders>OrderDate',
                        formatter: '.formatter.formatDate2'
                    }">
                    <firstStatus>
                        <ObjectStatus
                            text="{
                                formatter: '.formatter.getStatusText',
                                parameters: { ShippedDate: '{orders>ShippedDate}', OrderDate: '{orders>OrderDate}' }
                            }"
                            state="Success"
                            />
                    </firstStatus>
                    <ObjectAttribute text="{orders>Customer/CompanyName}"/>
                    <ObjectAttribute text="Shipped: {
                        path: 'orders>ShippedDate', 
                        formatter: '.formatter.formatDate'
                        }"/>
                </ObjectListItem>
            </List>
        </f:content>
    </f:DynamicPage>
</mvc:View>
